rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Dokument użytkownika
    match /users/{userId} {

      // Publiczny odczyt profili (ranking)
      allow read: if true;

      // Tworzenie własnego dokumentu
      allow create: if request.auth != null
        && request.auth.uid == userId;

      // Aktualizacja i usuwanie własnego dokumentu
      allow update, delete: if request.auth != null
        && request.auth.uid == userId;

      // Postęp kursów i rozdziałów
      match /courseProgress/{courseKey} {
        allow read, write: if request.auth != null
          && request.auth.uid == userId;
      }
    }

    // Blokada całej reszty bazy
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
